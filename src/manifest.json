{
   "name": "Spotify Currently Playing Scraper",
   "description": "Monitor the currently playing track on play.spotify.com.",
   "version": "0.1",
   "manifest_version": 2,

   "background": {
      "persistent": true,
      "page": "background.html"
   },
   "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/3.7.3/firebase.js; object-src 'self'",
   "permissions": [ "tabs", "webNavigation", "https://open.spotify.com/*", "https://play.spotify.com/*" ]
}